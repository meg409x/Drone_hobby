import cv2
import numpy as np
from matplotlib import pyplot as plt

img = cv2.imread(r'C:\Users\MEGHA M NAIR\watch.jpg',cv2.IMREAD_GRAYSCALE)

plt.imshow(img, cmap = 'gray', interpolation = 'bicubic')
plt.xticks([]), plt.yticks([])  # to hide tick values on X and Y axis
plt.plot([200,300,400],[100,200,300],'c', linewidth=5)
#You can plot lines, just as you would or could
#with any other Matplotlib graph using the pixel locations as coordinates, 
#Should you wish to draw on your images, however, Matplotlib is not required. 
plt.show()
